#:kivy 2.0.0

<Timer>:
    displayLabel:displayLabel
    cycleLabel:cycleLabel
    statusLabel:statusLabel
    main_btn:main_btn
    # anim_circle:anim_circle
    skip:skip
    reset:reset
    
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        
    BoxLayout:
        orientation: 'vertical'
        size: self.parent.size
        pos: self.parent.pos 
        padding: 10
        spacing: 10
        
        
        
        Label:
            id: statusLabel
            text: root.sequence[root.cycle] 
            color: 0.88, 0.47, 0.0, 1
            font_size: 35

        
        
        # Label:
        #     id:displayLabel
        #     text: root.time_convert()
        #     font_size: 120
        #     color: 0.88, 0.47, 0.0, 1
            
        CustLabel:
            id:displayLabel
            text: root.time_convert()
            font_size: 120
            color: 0.88, 0.47, 0.0, 1
            canvas:
                Color:
                    rgb: self.color
                Line:
                    circle: self.center_x, self.center_y, 180, 0, self.angle
                    width: 4
        Label:
            text: ''
            color: 0.88, 0.47, 0.0, 1         

        Label:
            id: cycleLabel
            text: 'Focus Cycle 1'
            color: 0.88, 0.47, 0.0, 1
            font_color: ''
            font_size: 35
        
        ## KIVY MAIN BUTTONS
        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            halign: 'centre'
            size_hint: .7, .6
            pos_hint: {'x': .15}

            Button:
                id: skip
                on_release: root.break_button(), root.timer_alarm.stop()
                background_normal: './resources/skip.png'
                background_down: './resources/skip.png'

            Button:
                id: main_btn
                on_release: root.start_button(), root.timer_alarm.stop()
                background_normal: './resources/play.png'
                background_down: './resources/play.png'


            Button:
                id: reset
                disabled: True
                on_release: root.reset_button(), root.timer_alarm.stop()
                background_disabled_normal: './resources/reset-disabled.png'
                background_normal: './resources/reset.png'
                background_down: './resources/reset.png'
